#include <iostream>
#include <windows.h>
#include <stdlib.h>
using namespace std;
int main()
{
    for(int i=6; i>0; i--){
        system("cls"); 
        /*method to if you wish to 
        clear the screen after a cout statement, 
        (So that 6 boxex of stop doesn't get printted) 
        present in stdlib.h*/
        cout<<"------"<<endl;
        cout<<"|STOP|"<<endl;
        cout<<"------"<<endl;
        cout<<"   "<<i;

        if(i==1){
            system("cls");
            cout<<"------------"<<endl;
            
            cout<<"|GET READY!|"<<endl;
            cout<<"------------"<<endl;
            i--;
        }

        Sleep(1500);
        /*method from window.h
        1500 ns (1.5sec) to put a gap between the 
        execution of next line of code*/
   }

    for(int i=6; i>0; i--){
        system("cls"); 
        cout<<"-----"<<endl;
        cout<<"|GO!|"<<endl;
        cout<<"-----"<<endl;
        cout<<"   "<<i;

        Sleep(1500);
    }

} 
